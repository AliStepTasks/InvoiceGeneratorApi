@model InvoiceDTO

<h1>Invoice Details</h1>

<table>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Customer Id</th>
        <td>@Model.CustomerId</td>
    </tr>
    <tr>
        <th>Start Date</th>
        <td>@Model.StartDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>End Date</th>
        <td>@Model.EndDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Rows</th>
        <td>
            <ul>
                @if (Model.Rows != null)
                {
                    @foreach (var row in Model.Rows)
                    {
                        <li>@row.Description - @row.Amount - @row.Price - @row.Total</li>
                    }
                }
            </ul>
        </td>
    </tr>
    <tr>
        <th>Total Sum</th>
        <td>@Model.TotalSum</td>
    </tr>
    <tr>
        <th>Comment</th>
        <td>@Model.Comment</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt</td>
    </tr>
</table>